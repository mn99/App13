<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    android:layout_height="match_parent"

    android:background="@android:color/transparent"
    android:fitsSystemWindows="false"

    >
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:foreground="#CDFFFFFF"
        android:elevation="1dp"
        android:id="@+id/cosmetic_view"
        />
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        app:elevation="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="-25dp"
        android:background="@null"
        android:fitsSystemWindows="false"
        >
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|enterAlways"
            android:background="@drawable/toolbar_ripple"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="1dp"
            android:elevation="2dp"
            app:elevation="1dp"
            android:fitsSystemWindows="false"
            android:clickable="true"
            app:title="Search your notes"
            app:titleTextAppearance="?attr/textAppearanceBody1"
            app:contentInsetStartWithNavigation="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="71dp"

            android:visibility="gone"
            >


        </com.google.android.material.appbar.MaterialToolbar>

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarSearch"

            android:layout_marginLeft="-16dp"

            android:visibility="visible">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EnterSearchKeyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/teal_200"
                android:hint="@string/search"
                android:imeOptions="actionDone"
                android:paddingTop="140dp"
                android:paddingBottom="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_gravity="top"
                android:fitsSystemWindows="false"
                app:endIconMode="clear_text"
                />
<!--            android:drawableEnd="@drawable/x_clear"-->
        </com.google.android.material.appbar.MaterialToolbar>



    </com.google.android.material.appbar.AppBarLayout>



    <include layout="@layout/content_main" />
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        app:fabAlignmentMode="end"
        app:elevation="3dp"

        android:backgroundTint="#CDFFFFFF"
        />
<!--    CDFFFFFF-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/add"
        app:layout_anchor="@id/bottom_app_bar"
        android:contentDescription="button"
        android:fitsSystemWindows="true"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>